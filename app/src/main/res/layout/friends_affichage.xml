<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dip"
    android:paddingRight="20dip">

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Amis"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:src="@android:drawable/divider_horizontal_textfield"
        android:id="@+id/separation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_below="@id/titre"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/nomAmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom Ami"
        android:paddingTop="20dip"
        android:layout_below="@id/separation"
        android:layout_alignParentLeft="true"
        />
    <Button
        android:id="@+id/supprimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:paddingTop="20dip"
        android:layout_below="@+id/separation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@id/supprimer"/>
    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="genre"
        android:paddingTop="10dip"
        android:layout_below="@+id/image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/cheveux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cheveux"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/genre"
        android:paddingTop="15dip"
        />
    <TextView
        android:id="@+id/localisation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="localisation"
        android:paddingTop="15dip"
        android:layout_below="@+id/cheveux"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="age"
        android:paddingTop="10dip"
        android:layout_below="@+id/image"
        android:layout_alignRight="@+id/yeux"
        android:layout_alignEnd="@+id/yeux" />
    <TextView
        android:id="@+id/yeux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yeux"
        android:layout_alignParentRight="true"
        android:layout_below="@id/age"
        android:paddingTop="15dip"
        />
    <TextView
        android:id="@+id/sexpref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="préférence sexuelle"
        android:layout_alignParentRight="true"
        android:layout_below="@id/yeux"
        android:paddingTop="15dip"
        />
    <Button
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrer en contact"
        android:layout_below="@id/localisation"
        android:layout_alignParentLeft="true"
        />
    <CheckBox
        android:id="@+id/favori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marquer comme favori"
        android:layout_below="@id/sexpref"
        android:layout_toRightOf="@id/contact"
        android:layout_alignParentRight="true"
        android:checked="false"
        />
    <Button
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficher plus de détails"
        android:layout_below="@+id/contact"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/rencontre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recontrer"
        android:layout_below="@id/favori"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/supprimer"
        android:layout_toStartOf="@+id/rencontre"
        android:layout_above="@+id/age"
        android:layout_toLeftOf="@+id/rencontre" />
</RelativeLayout>