<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dip"
    android:paddingRight="30dip">

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amis"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/nomAmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom Ami"
        android:paddingTop="20dip"
        android:layout_below="@id/titre"
        android:layout_alignParentLeft="true"
        />
    <Button
        android:id="@+id/supprimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:layout_below="@id/titre"
        android:paddingTop="20dip"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="genre"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/nomAmi"
        android:paddingTop="60dip"
        />
    <TextView
        android:id="@+id/cheveux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cheveux"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/genre"
        android:paddingTop="15dip"
        />
    <TextView
        android:id="@+id/localisation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="localisation"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/cheveux"
        android:paddingTop="15dip"
        />
    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="age"
        android:layout_alignParentRight="true"
        android:layout_below="@id/supprimer"
        android:paddingTop="47dip"
        />
    <TextView
        android:id="@+id/yeux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yeux"
        android:layout_alignParentRight="true"
        android:layout_below="@id/age"
        android:paddingTop="15dip"
        />
    <TextView
        android:id="@+id/sexpref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="préférence sexuelle"
        android:layout_alignParentRight="true"
        android:layout_below="@id/yeux"
        android:paddingTop="15dip"
        />
    <Button
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrer en contact"
        android:layout_below="@id/localisation"
        android:layout_alignParentLeft="true"
        />
    <Button
        android:id="@+id/favori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marquer comme favori"
        android:layout_below="@id/sexpref"
        android:layout_toRightOf="@id/contact"
        android:layout_alignParentRight="true"
        />
    <Button
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficher plus de détails"
        android:layout_below="@id/favori"
        android:layout_alignParentLeft="true"
        />
    <Button
        android:id="@+id/rencontre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recontrer"
        android:layout_below="@id/favori"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>